@model TourismManagementSystem.Models.TravelPackage
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Travel Package</h2>

<p>Are you sure you want to delete this package?</p>

<ul>
    <li><strong>Title:</strong> @Model.Title</li>
    <li><strong>Description:</strong> @Model.Description</li>
    <li><strong>Price:</strong> @Model.Price</li>
    <li><strong>Duration:</strong> @Model.Duration</li>
</ul>

@using (Html.BeginForm("DeleteConfirmed", "TravelPackage", new { id = Model.TravelPackageId }, FormMethod.Post))
            {
                <input type="submit" value="Yes, Delete" />
            }

