
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div>
        <label>Email:</label>
        <input type="text" name="email" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" required />
    </div>
    <input type="submit" value="Login" />
}

@if (ViewBag.Message != null)
{
    <p style="color:red">@ViewBag.Message</p>
} 